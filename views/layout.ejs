<html>
    <head>
        <title>
            <%= title %>
        </title>

        <!-- using NOty -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        
        <!-- adding JQuery AJAX -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>

        <!-- for linking layout.css file -->
        <link rel="stylesheet" href="<%= assetPath('css/layout.css') %>">
        <link rel="stylesheet" href="<%= assetPath('css/header.css') %>">
        <link rel="stylesheet" href="<%= assetPath('css/footer.css') %>">


        <!-- whenever there is something called as a link tag or a script tag in the body,it will automatically put link tag(<%- style %>) above </head> and script tag above body closing -->
        <%- style %>
    </head>
    <body>
        
         <%- include('_header'); %> 


        <main id="layout-main">
            
            <%- body %>

        </main>
       

        <%- include('_footer'); -%>

        <%- script %> 

        <!--adding own noty script tag for flash messages-->
        <script>

             <% if (flash.success && flash.success.length > 0) { %>
                  new Noty({
                    theme: 'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                }).show();
            
            <% } %>

            <% if (flash.error && flash.error.length > 0) { %>
                  new Noty({
                    theme: 'relax',
                    text: "<%= flash.error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                }).show();
            
            <% } %>
        </script>
       


    </body>
</html>