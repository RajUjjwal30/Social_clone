<h1>Facebook / <%= title %></h1>

<section id="feed-posts">
        <h3>Posts</h3>
<!-- creating post is visible only when the user is signed -in -->
        <% if(locals.user) {%>
        <form action="/posts/create" id="new-post-form" method="post">
                <textarea name="content" id="" cols="30" rows="3" placeholder="type here!"></textarea>
                <input type="submit" value="Post">
        </form>
        <% } %>
<!-- for showing posts on home page -->
        <div id="posts-list-container">
                <ul>
                        <% for(post of posts) {%>
                                <li>
                                        <p>
                                                <%= post.content %>
                                                <br>
                                                <small>
                                                        <%= post.user.name %>
                                                </small>
                                        </p>
                                        <!-- creating form for comments -->
                                        <div class="post-comments">
                                                <!-- those who logged in only they can see the form -->
                                                <% if (locals.user) { %>
                                                        <form action="/comments/create" method="post">
                                                                <input type="text" name="content" placeholder="Type here to add comment..!">

                                                                <!-- The id of the post in which we have to add a comment -->
                                                                <input type="hidden" name="post" value="<%= post._id%>">
                                                                <input type="submit" value="Add comment">

                                                        </form>


                                               <% } %>





                                        </div>

                                        
                                </li>
                        <% } %>
                </ul>

        </div>

</section>

        